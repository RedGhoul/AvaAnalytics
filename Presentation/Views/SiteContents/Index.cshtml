@model IEnumerable<Domain.SiteContent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FinalHeader)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalHeaderContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhatWeCollect)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrivacyPolicy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documentation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FinalHeader)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalHeaderContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhatWeCollect)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrivacyPolicy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Documentation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
