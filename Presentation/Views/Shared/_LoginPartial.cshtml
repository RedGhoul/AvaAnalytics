@using Microsoft.AspNetCore.Identity
@using Domain
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link h5" asp-area="" asp-controller="WebSites" asp-action="Index">Websites</a>
            </li>
            <li class="nav-item">
                <a class="nav-link h5" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Settings</a>
            </li>
            @if (User.IsInRole("Admin")){
                <li class="nav-item">
                    <a class="nav-link h5"  asp-controller="SiteContents" asp-action="Index">Site Contents</a>
                </li>
                 <li class="nav-item">
                     <a class="nav-link h5"  asp-controller="TimeZoneValues" asp-action="Index">TimeZoneValues</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link h5" href="/hangfire">HangFire</a>
                </li>
            }

        <li class="nav-item">
            <form id="logout_form" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <a class="nav-link h5" href="javascript:{}" onclick="document.getElementById('logout_form').submit(); return false;">Logout</a>
            </form>
        </li>

        }
        else
        {
        <li class="nav-item">
            <a class="nav-link h5" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link h5" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        }
    </ul>
