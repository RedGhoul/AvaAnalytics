FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-buster-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["HangFire/HangFire.csproj", "/HangFire/"]
COPY ["Application/Application.csproj", "/Application/"]
COPY ["Config/Config.csproj", "/Config/"]
COPY ["Domain/Domain.csproj", "/Domain/"]
COPY ["Persistence/Persistence.csproj", "/Persistence/"]
RUN dotnet restore "/HangFire/HangFire.csproj"
COPY . .
WORKDIR "/src/."
RUN dotnet build "HangFire/HangFire.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "HangFire/HangFire.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "HangFire.dll"]
